{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Zephyr-ST workspace",
            "type": "shell",
            "command": [
                "mkdir -p Zephyr-Workspace ;",
                "mkdir -p Zephyr-Workspace/manifest ;",
                "cp ./west.yml ./Zephyr-Workspace/manifest ;",
                "rm ./west.yml ;",
                "cd Zephyr-Workspace ;",
                "west init -l ./manifest --mf ./west.yml ;",
                "west update ;",
                "cp ./manifest/west.yml ../west.yml ;"
            ],
            "windows": {
                "options": {
                    "shell": {
                        "executable": "powershell.exe",
                        "args": [
                            "-Command"
                        ]
                    }
                }
            },
            "linux": {
                "options": {
                    "shell": {
                        "executable": "/bin/bash",
                        "args": [
                            "-c"
                        ]
                    }
                }
            },
            "osx": {
                "options": {
                    "shell": {
                        "executable": "/bin/bash",
                        "args": [
                            "-c"
                        ]
                    }
                }
            },
            "problemMatcher": []
        }
    ]
}
